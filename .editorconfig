# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C source files - match existing Spin style
[*.{c,h}]
indent_style = tab
indent_size = 8

# YACC grammar
[*.y]
indent_style = tab
indent_size = 8

# Makefiles require tabs
[Makefile]
indent_style = tab

[makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ProMeLa specification files
[*.pml]
indent_style = tab
indent_size = 8
